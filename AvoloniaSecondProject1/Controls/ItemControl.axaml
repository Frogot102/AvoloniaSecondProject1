<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvoloniaSecondProject1.ItemControl">
	<Grid RowDefinitions="*, Auto">
		<DataGrid IsReadOnly="True" Name="MainDataGridUsers" Grid.Row="0" DoubleTapped="DataGrid_DoubleTapped">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Item Id" Binding="{Binding IdItem} "/>
				<DataGridTextColumn Header="Item Name" Binding="{Binding ItemName}"/>
				<DataGridTextColumn Header="Item Description" Binding="{Binding Description }"/>
				<DataGridTextColumn Header="Cost" Binding="{Binding Cost}"/>
			</DataGrid.Columns>
		</DataGrid>
		<Button Content="Добавление" Grid.Row="1" Click="Button_Click"/>
	</Grid>
</UserControl>
