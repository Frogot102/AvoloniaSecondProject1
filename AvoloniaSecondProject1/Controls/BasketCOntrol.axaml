<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:AvoloniaSecondProject1.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvoloniaSecondProject1.BasketCOntrol"
			 x:DataType="vm:MainWindowViewModel">
	<Grid RowDefinitions="*, Auto">
		<DataGrid ItemsSource="{Binding Basckets}" IsReadOnly="True" Name="MainDataGridUsers" Grid.Row="0" DoubleTapped="DataGrid_DoubleTapped">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Item Id"/>
				<DataGridTextColumn Header="Item Name"/>
				<DataGridTextColumn Header="Item Description"/>
				<DataGridTextColumn Header="Cost"/>
			</DataGrid.Columns>
		</DataGrid>
		<Button Content="Добавление" Grid.Row="1" Click="Button_Click_Add"/>
	</Grid>
</UserControl>
