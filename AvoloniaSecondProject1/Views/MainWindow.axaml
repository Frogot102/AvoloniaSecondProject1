<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvoloniaSecondProject1.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvoloniaSecondProject1.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="AvoloniaSecondProject1">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
			<Button Content="Users" Click="Button_Click_Users" Width="150" HorizontalContentAlignment="Center" Background="Orange" FontWeight="Heavy"/>
			<Button Content="Items" Click="Button_Click_Items" Width="150" HorizontalContentAlignment="Center" Background="LightGreen" FontWeight="Heavy"/>
			<Button Content="Basket" Click="Button_Click_Basket" Width="150" HorizontalContentAlignment="Center" Background="LightSkyBlue" FontWeight="Heavy"/>
		</StackPanel>
		<ContentControl	 Grid.Row="1" x:Name="MainControl"/>
	</Grid>
</Window>
