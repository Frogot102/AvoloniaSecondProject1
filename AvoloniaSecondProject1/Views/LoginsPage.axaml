<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:vm="using:AvoloniaSecondProject1.ViewModels"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvoloniaSecondProject1.LoginsPage"
        Title="LoginsPage"
		x:DataType="vm:LoginPageViewModel">
		<Grid RowDefinitions="*, Auto">
		<DataGrid ItemsSource="{Binding Logins}" IsReadOnly="True" Name="LoginsPageGrid" Grid.Row="0" DoubleTapped="DataGrid_DoubleTapped">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Id Login" Binding="{Binding IdLogin}"/>
				<DataGridTextColumn Header="Login" Binding="{Binding Login1}"/>
				<DataGridTextColumn Header="Password" Binding="{Binding Password}"/>
				<DataGridTextColumn Header="Id User" Binding="{Binding UserId}"/>
			</DataGrid.Columns>
		</DataGrid>
		<Button Content="Добавление" Grid.Row="1" Click="Button_Click"/>
	</Grid>
</Window>
